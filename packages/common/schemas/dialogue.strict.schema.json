{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "title": "NPC Dialogue (Strict Schema)",
  "type": "object",
  "properties": {
    "format_version": {
      "type": "string"
    },
    "minecraft:npc_dialogue": {
      "type": "object",
      "properties": {
        "scenes": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "scene_tag": {
                "type": "string"
              },
              "npc_name": {
                "type": "string"
              },
              "text": {
                "type": "string"
              },
              "on_open_commands": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "on_close_commands": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "buttons": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "commands": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            },
            "required": ["scene_tag"]
          }
        }
      }
    }
  },
  "required": [
    "format_version",
    "minecraft:npc_dialogue"
  ],
  "additionalProperties": false
}
